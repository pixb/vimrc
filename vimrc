if &compatible
  set nocompatible
endif
inoremap jk <ESC>
syntax on
filetype on
set nobackup
set novisualbell
set visualbell t_vb=
set ruler
set nu
set rnu
set showcmd
set backspace=indent,eol,start
set scrolloff=3
set hlsearch
set expandtab
set autoindent
set smartindent
set smarttab
set shiftwidth=2
set tabstop=2
set softtabstop=2
